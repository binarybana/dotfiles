#!/bin/bash

input=$1
strinput=${input%.tex}
opts='--enable-write18'
ext=tex
ENGINE=lualatex
export TMPDIR=/tmp

$ENGINE ${opts} -draftmode -interaction nonstopmode -output-directory /tmp $input > /dev/null 2>&1
bibtex /tmp/${strinput}.aux > /dev/null 2>&1
cp /tmp/${strinput}.bbl .
$ENGINE ${opts} -draftmode -interaction nonstopmode -output-directory /tmp $input > /dev/null 2>&1
if [ "$2" == "errors" ]; then
		$ENGINE ${opts} -interaction nonstopmode -output-directory /tmp $input
else
		$ENGINE ${opts} -interaction nonstopmode -output-directory /tmp $input | grep -i error -C 5
fi
rm ${strinput}.bbl

if [ -z "$2" ]; then
    xdg-open /tmp/${input%.tex}.pdf > /dev/null 2>&1
fi
